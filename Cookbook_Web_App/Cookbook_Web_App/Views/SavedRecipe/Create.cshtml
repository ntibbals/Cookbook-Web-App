@model Cookbook_Web_App.Models.SavedRecipe

@{
    ViewData["Title"] = "Create";

    Layout = "_Layout";
}

<h1>Create a Recipe</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <div asp-validation-summary="ModelOnly"></div>
                <label asp-for="SavedRecipeID" class="control-label"></label>
                <input asp-for="SavedRecipeID" class="form-control" />
                <span asp-validation-for="SavedRecipeID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}